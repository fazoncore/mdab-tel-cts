{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/mdab/v0.1/policy.schema.json",
  "title": "MDAB v0.1 Policy (structural)",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "policy_id",
    "policy_version",
    "rules"
  ],
  "properties": {
    "policy_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "policy_version": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "evaluation": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "mode",
        "default_outcome",
        "default_reason_code"
      ],
      "properties": {
        "mode": {
          "type": "string"
        },
        "default_outcome": {
          "type": "string"
        },
        "default_reason_code": {
          "type": "string"
        }
      }
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": [
          "id",
          "effect",
          "reason_code",
          "match"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128
          },
          "effect": {
            "type": "string",
            "enum": [
              "ALLOW",
              "DENY",
              "ESCALATE"
            ]
          },
          "reason_code": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          },
          "match": {
            "type": "object"
          }
        }
      }
    }
  }
}